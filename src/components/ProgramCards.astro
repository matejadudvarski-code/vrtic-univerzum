---
import "../styles/global.css";
---

<section style="background-color: #BA96EC; padding: 50px 0;">
  <div class="container">
    <!-- Title Card on the Right -->
    <div class="row justify-content-end" style="position: relative; top: -85px;">
      <div class="col-lg-4 col-md-5">
        <div class="card mb-4">
          <div class="card-body">
            <h1 class="card-section-title text-center">Program</h1>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Cards Section with 2 rows of 3 cards -->
    <div class="row justify-content-center">
      <!-- First Row of Cards -->
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title card-title-bg">Engleski Jezik</h5>
            <img src="/images/atelje.webp" class="card-img-top" alt="Card image">
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title card-title-bg">Školica Sporta</h5>
            <img src="/images/sala.webp" class="card-img-top" alt="Card image">
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <div class="card-body text-center ">
            <h5 class="card-title card-title-bg">Ishrana</h5>
            <img src="/images/Kuhinja.webp" class="card-img-top" alt="Card image">
          </div>
        </div>
      </div>
    </div>

    <!-- Second Row of Cards -->
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title card-title-bg">Zdravlje</h5>
            <img src="/images/zepter.webp" class="card-img-top" alt="Card image">
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title card-title-bg">Slana Soba</h5>
            <img src="/images/slana soba.webp" class="card-img-top" alt="Card image">
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title card-title-bg">Boravak na Otvorenom</h5>
            <img src="/images/bašta1.webp" class="card-img-top" alt="Card image">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-color: #BA96EC;
    padding: 50px 0;
  }

  .card-body {
    padding: 20px;
  }

  .card-title {
    font-weight: bold;
    font-size: 1.5rem;
    color: #032D6C;
  }

  .card-section-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #032D6C;
  }

  .card-img-top {
    object-fit: cover;
    height: 200px;
  }

  .row {
    margin-bottom: 20px;
  }

  .card-body img {
    width: 100%;
    height: auto;
  }
  
  .card-title-bg {
    background-color: #E6EDF8;
    padding: 10px;
  }
</style>


  